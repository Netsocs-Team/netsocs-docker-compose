# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database
DB_HOST=netsocs-mysql
DB_PORT=3306
DB_NAME=netsocs
DB_USER=netsocs
DB_PASS=password
DB_ROOT_PASSWORD=rootpassword

# MongoDB
MONGO_URI=mongodb://netsocs-mongodb:27017/netsocs
MONGO_DATABASE=netsocs
MONGO_ROOT_USER=root
